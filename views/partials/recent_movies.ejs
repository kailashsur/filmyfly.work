<% if (recentMovies && recentMovies.length> 0) { %>
    <% recentMovies.forEach(movie=> { %>

        <div class="A10">
            <table width="100%">
                <tr>
                    <td width="63"><a href="<%= movie.slug %>"><img src="<%= movie.thumbnail || 'N/A' %>" width="60"
