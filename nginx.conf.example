# FilmyFly Nginx Configuration with Ultra-Fast Caching
# This file is automatically installed by setup-gcp.sh
# Location: /etc/nginx/sites-available/filmyflyhd.space
# Symlinked to: /etc/nginx/sites-enabled/filmyflyhd.space

# Cache configuration - aggressive caching for fast performance
proxy_cache_path /var/cache/nginx/filmyfly levels=1:2 keys_zone=filmyfly_cache:100m max_size=1g inactive=60d use_temp_path=off;

# Upstream backend - Node.js application
upstream filmyfly_backend {
    # Least connections load balancing
    least_conn;
    
    # Connection to Node.js running on port 3000
    server 127.0.0.1:3000 max_fails=3 fail_timeout=30s;
    
    # Keep connections alive for performance
    keepalive 32;
}

#==============================================================================
# HTTP Server - Redirect to HTTPS
#==============================================================================
server {
    listen 80;
    server_name filmyflyhd.space www.filmyflyhd.space;
    
    # Allow Let's Encrypt certificate verification
    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }
    
    # Redirect all other traffic to HTTPS
    location / {
        return 301 https://$server_name$request_uri;
    }
}

#==============================================================================
# HTTPS Server - Main Configuration
#==============================================================================
server {
    listen 443 ssl http2;
    server_name filmyflyhd.space www.filmyflyhd.space;
    
    # =========================================================================
    # SSL Configuration (Auto-configured by Let's Encrypt/Certbot)
    # =========================================================================
    ssl_certificate /etc/letsencrypt/live/filmyflyhd.space/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/filmyflyhd.space/privkey.pem;
    
    # Use TLS 1.2+ for security and performance
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;
    
    # SSL session caching for faster subsequent connections
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;
    
    # =========================================================================
    # Compression - Reduces bandwidth and improves response time
    # =========================================================================
    gzip on;
    gzip_vary on;
    gzip_types text/plain text/css text/javascript application/javascript application/json text/xml application/xml application/xml+rss;
    gzip_min_length 1000;
    gzip_comp_level 6;
    gzip_proxied any;
    gzip_disable "msie6";
    
    # =========================================================================
    # Security Headers
    # =========================================================================
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    add_header Permissions-Policy "accelerometer=(), camera=(), microphone=(), geolocation=()" always;
    
    # =========================================================================
    # Logging
    # =========================================================================
    access_log /var/log/nginx/filmyfly_access.log combined;
    error_log /var/log/nginx/filmyfly_error.log warn;
    
    # =========================================================================
    # Static Files - Root Directory
    # =========================================================================
    root /home/filmyfly/app/public;
    
    # =========================================================================
    # Cache Static Assets for 1 Year (Images, CSS, JS, Fonts)
    # =========================================================================
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|svg|woff|woff2|ttf|eot|webp)$ {
        expires 365d;
        add_header Cache-Control "public, immutable";
        access_log off;
        # If file doesn't exist, 404 without checking backend
        error_page 404 =404 @404;
    }
    
    # =========================================================================
    # Cache HTML Pages for 30 Days
    # =========================================================================
    location ~* \.html?$ {
        expires 30d;
        add_header Cache-Control "public, max-age=2592000";
    }
    
    # =========================================================================
    # Main Application - Reverse Proxy with Caching
    # =========================================================================
    location / {
        # Caching configuration
        proxy_cache filmyfly_cache;
        proxy_cache_valid 200 30m;      # Cache successful responses for 30 minutes
        proxy_cache_valid 404 1m;       # Cache 404s for 1 minute
        proxy_cache_valid 500 502 503 504 1m;  # Cache errors for 1 minute
        
        # Use request method and URL as cache key
        proxy_cache_key "$scheme$request_method$host$request_uri";
        
        # Bypass cache for certain conditions
        proxy_cache_bypass $http_pragma $http_authorization $http_cache_control;
        proxy_no_cache $http_pragma $http_authorization $http_cache_control;
        
        # Add cache status header for debugging (remove in production if needed)
        add_header X-Cache-Status $upstream_cache_status;
        
        # ===== Reverse Proxy Settings =====
        proxy_pass http://filmyfly_backend;
        proxy_http_version 1.1;
        
        # Upgrade connection for WebSockets (if needed)
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        
        # Pass important headers to backend
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $server_name;
        
        # Connection settings
        proxy_redirect off;
        proxy_buffering on;
        proxy_buffer_size 128k;
        proxy_buffers 4 256k;
        proxy_busy_buffers_size 256k;
        
        # Timeouts (adjust based on your API response time)
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }
    
    # =========================================================================
    # Admin Routes - NO CACHING
    # =========================================================================
    location /admin/ {
        proxy_pass http://filmyfly_backend;
        proxy_http_version 1.1;
        
        # Pass headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Disable cache for admin pages
        proxy_cache_bypass 1;
        proxy_no_cache 1;
        
        # Admin pages might take longer
        proxy_read_timeout 90s;
    }
    
    # =========================================================================
    # API Routes - SHORT CACHE (5 minutes)
    # =========================================================================
    location /api/ {
        proxy_cache filmyfly_cache;
        proxy_cache_valid 200 5m;  # Cache API responses for 5 minutes
        proxy_cache_key "$scheme$request_method$host$request_uri$request_body";
        
        # Add cache status header
        add_header X-Cache-Status $upstream_cache_status;
        
        proxy_pass http://filmyfly_backend;
        proxy_http_version 1.1;
        
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        proxy_read_timeout 60s;
    }
    
    # =========================================================================
    # Health Check Endpoint - NO LOGGING
    # =========================================================================
    location /health {
        proxy_pass http://filmyfly_backend;
        access_log off;
    }
    
    # =========================================================================
    # Custom Error Pages
    # =========================================================================
    error_page 404 /404.html;
    error_page 500 502 503 504 /50x.html;
    location = /50x.html {
        root /usr/share/nginx/html;
    }
}

# ============================================================================
# Performance Notes:
# ============================================================================
# 1. Static assets are cached for 1 year (browser cache)
# 2. Pages are cached for 30 minutes on Nginx
# 3. Admin pages bypass cache for real-time updates
# 4. API responses cached for 5 minutes
# 5. Gzip compression reduces payload size by ~70%
# 6. HTTP/2 multiplexing improves parallel requests
# 7. SSL session caching reduces handshake overhead
# 
# Expected results:
# - First page load: ~500ms-2s
# - Cached page load: <200ms
# - Cache hit rate: >80%
# - File transfer time reduced by 70% with gzip
